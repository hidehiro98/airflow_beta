<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="new-request-box">
        <h2><%= t('.profile') %></h2>
        <div>
          <% if @user.photo? %>
            <%= image_tag @user.photo.url(:profile_face), class: 'img-circle' %>
          <% else %>
            <i class="material-icons md-48">account_circle</i>
          <% end %>
        </div>
        <h4>
          <%= @user.name %>
        </h4>
        <h4>
          <%= @user.email %>
        </h4>
        <h4>
          <%= @user.team.name %>
        </h4>
        <p><%= link_to t('.edit_profile'), edit_profile_path, class: 'btn btn-primary' %></p>
        <p><%= link_to t('.edit_password'), edit_user_registration_path, class: 'btn btn-primary' %></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h2>Profile page</h2>
      <div>
        <% if @user.photo? %>
          <%= cl_image_tag @user.photo %>
        <% else %>
          <i class="material-icons md-48">account_circle</i>
        <% end %>
      </div>
      <h4>
        <%= @user.name %>
      </h4>
      <h4>
        <%= @user.email %>
      </h4>
      <h4>
        <%= @user.team.name %>
      </h4>
      <%= link_to 'Edit profile', edit_profile_path %>
    </div>
  </div>
</div>

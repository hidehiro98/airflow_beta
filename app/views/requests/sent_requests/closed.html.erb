<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <div class="new-request">
        <%= link_to 'New Request', new_request_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <div class="tab-and-search">
        <ul class="nav nav-tabs">
          <li role="presentation">
            <%= link_to 'Open', requests_sent_requests_path %>
          </li>
          <li role="presentation" class="active">
            <a >Closed</a>
          </li>
        </ul>
        <form action="">
          <input type="text" placeholder="Search request">
        </form>
      </div>
    </div>
  </div>
  <% @requests.each do |request| %>
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= render "sent_request_card", request: request %>
      </div>
    </div>
  <% end %>
</div>

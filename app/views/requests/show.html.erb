<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <%= render 'request_card', request: @request %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <% @request.comments.each do |comment| %>
        <%= render 'comment', comment: comment %>
      <% end %>
    </div>
  </div>
</div>
